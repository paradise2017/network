{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lws2_32" // 链接 Windows 套接字库
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "type": "go",
            "label": "go: build package",
            "command": "build",
            "args": [
                "${fileDirname}"
            ],
            "problemMatcher": [
                "$go"
            ],
            "group": "build",
            "detail": "cd c:\\Users\\Administrator\\Desktop\\vscode-demo; go build ${fileDirname}"
        }
    ],
    "version": "2.0.0"
}